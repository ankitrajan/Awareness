<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000C1F"
    tools:context="com.example.ankit.awareness.MyAccountActivity">

    <ListView
        android:id="@+id/DeviceList"
        android:layout_width="340dp"
        android:layout_height="165dp"
        android:layout_below="@+id/piechart"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Refresh"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/DeviceList"
        android:layout_marginBottom="23dp"
        android:layout_marginStart="65dp"
        android:background="@drawable/button_selector"
        android:text="REFRESH"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DeviceList"
        app:layout_constraintVertical_bias="0.49" />

    <Button
        android:id="@+id/SignOut"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/Refresh"
        android:layout_marginStart="44dp"
        android:layout_toEndOf="@+id/Refresh"
        android:background="@drawable/button_selector"
        android:text="SIGNOUT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Refresh"
        app:layout_constraintTop_toBottomOf="@+id/DeviceList"
        app:layout_constraintVertical_bias="0.471" />

    <TextView
        android:id="@+id/StatsField"
        android:layout_width="333dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="340dp"
        android:layout_height="275dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/DeviceList"
        android:layout_marginTop="13dp"></com.github.mikephil.charting.charts.PieChart>

</RelativeLayout>

